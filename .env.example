# Environment variables for Text-to-SQL Assistant
# Copy this file to .env and update the values as needed

# Application settings
DEBUG=false
APP_NAME="Text-to-SQL Assistant"
APP_VERSION="1.0.0"

# Database settings - Supabase PostgreSQL
DATABASE_URL="postgresql://username:password@db.supabase.co:5432/postgres"
# Alternative format: DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase specific (optional, for future features)
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# LLM settings
LLM_MODEL_NAME="microsoft/DialoGPT-medium"
GROQ_API_KEY="your-groq-api-key-here"
MAX_TOKENS=512
TEMPERATURE=0.7

# API settings
API_HOST="0.0.0.0"
API_PORT=8000

# Security settings (CHANGE IN PRODUCTION!)
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging settings
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
